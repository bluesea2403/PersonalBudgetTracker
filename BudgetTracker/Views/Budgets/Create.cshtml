@model BudgetTracker.Models.Budget

@{
    ViewData["Title"] = "Tạo Ngân sách mới";
}

<div class="content-page-container">
    <h1 class="page-title text-success mb-3">
        <i class="fas fa-plus-circle me-2"></i> @ViewData["Title"]
    </h1>

    <p class="text-muted">Thiết lập hạn mức chi tiêu theo danh mục trong tháng bạn muốn.</p>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Month" class="form-label fw-semibold">
                                <i class="fas fa-calendar-alt me-1 text-primary"></i> Tháng
                            </label>
                            <select asp-for="Month" class="form-select" asp-items="ViewBag.MonthList"></select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Year" class="form-label fw-semibold">
                                <i class="fas fa-calendar me-1 text-primary"></i> Năm
                            </label>
                            <select asp-for="Year" class="form-select" asp-items="ViewBag.YearList"></select>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-semibold">
                        <i class="fas fa-tags me-1 text-secondary"></i> Danh mục chi tiêu
                    </label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Amount" class="form-label fw-semibold">
                        <i class="fas fa-coins me-1 text-warning"></i> Hạn mức tiền
                    </label>
                    <input asp-for="Amount" class="form-control" placeholder="VD: 2,000,000" />
                    <span asp-validation-for="Amount" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-check-circle me-1"></i> Tạo ngân sách
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
