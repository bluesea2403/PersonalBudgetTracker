@model BudgetTracker.Models.Budget

@{
    ViewData["Title"] = "Chỉnh sửa Ngân sách";
}

<div class="content-page-container">
    <h1 class="page-title text-warning">
        <i class="fas fa-pen-alt me-2"></i> @ViewData["Title"]
    </h1>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Month" class="form-label fw-semibold">
                        <i class="fas fa-calendar-alt me-1 text-primary"></i> Tháng
                    </label>
                    <input asp-for="Month" class="form-control" placeholder="Nhập tháng (1-12)" />
                    <span asp-validation-for="Month" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Year" class="form-label fw-semibold">
                        <i class="fas fa-calendar me-1 text-primary"></i> Năm
                    </label>
                    <input asp-for="Year" class="form-control" placeholder="Nhập năm" />
                    <span asp-validation-for="Year" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label fw-semibold">
                        <i class="fas fa-coins me-1 text-success"></i> Hạn mức ngân sách
                    </label>
                    <input asp-for="Amount" class="form-control" placeholder="VD: 5,000,000" />
                    <span asp-validation-for="Amount" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="CategoryId" class="form-label fw-semibold">
                        <i class="fas fa-list me-1 text-secondary"></i> Danh mục
                    </label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
