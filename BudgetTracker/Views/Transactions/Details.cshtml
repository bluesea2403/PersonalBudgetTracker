@model BudgetTracker.Models.Transaction

@{
    ViewData["Title"] = "Chi tiết Giao dịch";
    var culture = new System.Globalization.CultureInfo("vi-VN");
    string icon = Model.Category?.Type == StaticDetails.Income ? "💰" : "💸";
    string typeLabel = Model.Category?.Type == StaticDetails.Income ? "Thu nhập" : "Chi tiêu";
}

<div class="content-page-container">
    <h1 class="page-title mb-4">
        <i class="fas fa-receipt me-2"></i>@ViewData["Title"]
    </h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white fw-bold">
            <i class="fas fa-info-circle me-2"></i>Thông tin chi tiết giao dịch
        </div>
        <div class="card-body px-4 py-3">
            <div class="mb-3 bg-light rounded p-3">
                <div class="d-flex justify-content-between">
                    <span><i class="fas fa-money-bill-wave me-2 text-success"></i><strong>Số tiền:</strong></span>
                    <span class="fw-bold @((Model.Category?.Type == StaticDetails.Income) ? "text-success" : "text-danger")">
                        @icon @Model.Amount.ToString("N0", culture) đ
                    </span>
                </div>
            </div>

            <div class="mb-3 bg-light rounded p-3">
                <div class="d-flex justify-content-between">
                    <span><i class="fas fa-exchange-alt me-2 text-info"></i><strong>Loại giao dịch:</strong></span>
                    <span>@icon @typeLabel</span>
                </div>
            </div>

            <div class="mb-3 bg-light rounded p-3">
                <div class="d-flex justify-content-between">
                    <span><i class="fas fa-align-left me-2 text-muted"></i><strong>Mô tả:</strong></span>
                    <span>@Model.Description</span>
                </div>
            </div>

            <div class="mb-3 bg-light rounded p-3">
                <div class="d-flex justify-content-between">
                    <span><i class="fas fa-calendar-day me-2 text-warning"></i><strong>Ngày giao dịch:</strong></span>
                    <span>@Model.Date.ToString("dd/MM/yyyy")</span>
                </div>
            </div>

            <div class="mb-3 bg-light rounded p-3">
                <div class="d-flex justify-content-between">
                    <span><i class="fas fa-folder-open me-2 text-primary"></i><strong>Danh mục:</strong></span>
                    <span>@Model.Category?.Name</span>
                </div>
            </div>
        </div>
    </div>

    <div class="text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
        </a>
    </div>
</div>
