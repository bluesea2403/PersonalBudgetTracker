@model BudgetTracker.Models.FinancialGoal

@{
    ViewData["Title"] = "Tạo Mục tiêu Mới";
}

<div class="content-page-container">
    <div class="mb-4">
        <h1 class="page-title text-success">
            <i class="fas fa-bullseye me-2"></i> @ViewData["Title"]
        </h1>
        <h5 class="text-muted">Đặt mục tiêu tài chính dài hạn và theo dõi tiến độ của bạn.</h5>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">🎯 Tên mục tiêu</label>
                            <input asp-for="Name" class="form-control" placeholder="VD: Mua xe, Tiết kiệm cưới..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TargetAmount" class="form-label">💰 Số tiền mục tiêu</label>
                            <input asp-for="TargetAmount" class="form-control" type="number" min="0" />
                            <span asp-validation-for="TargetAmount" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Deadline" class="form-label">📅 Hạn hoàn thành</label>
                            <input asp-for="Deadline" class="form-control" type="date" />
                            <span asp-validation-for="Deadline" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <input type="submit" value="Tạo mục tiêu" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
