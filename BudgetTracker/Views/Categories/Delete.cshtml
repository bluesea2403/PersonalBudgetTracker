@model BudgetTracker.Models.Category

@{
    ViewData["Title"] = "Xóa Danh mục";
}

<div class="content-page-container">
    <h1 class="page-title text-danger"><i class="fas fa-trash-alt me-2"></i>Xóa Danh mục</h1>

    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Bạn có chắc chắn muốn xóa danh mục này? Thao tác này không thể hoàn tác.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Tên danh mục</dt>
                <dd class="col-sm-9 fw-bold">@Model.Name</dd>

                <dt class="col-sm-3 text-muted">Loại</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3 text-muted">Biểu tượng</dt>
                <dd class="col-sm-9"><i class="@Model.Icon fa-lg me-1"></i>@Model.Icon</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
        <!-- Nút mở modal xác nhận -->
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            <i class="fas fa-trash-alt me-1"></i> Xác nhận Xóa
        </button>
    </div>
</div>

<!-- ========== Modal Xác nhận Xóa ========== -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel"><i class="fas fa-exclamation-circle me-1"></i> Xác nhận Xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa danh mục "<strong>@Model.Name</strong>" không?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-1"></i> Xóa ngay</button>
                </form>
            </div>
        </div>
    </div>
</div>
