@model BudgetTracker.Models.Category

@{
    ViewData["Title"] = "Sửa Danh mục";
}

<div class="content-page-container">
    <h1 class="page-title mb-4">
        <i class="fas fa-edit me-2 text-primary"></i>@ViewData["Title"]
    </h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="fas fa-pen me-1"></i>Thông tin Danh mục
                </div>
                <div class="card-body">
                    <partial name="_CategoryForm" model="Model" />
                </div>
                <div class="card-footer text-end bg-light">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/category-form.js"></script>
}
