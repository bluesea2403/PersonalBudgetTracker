@model RoleManagementViewModel
@{
    ViewData["Title"] = "Quản lý Vai trò";
}

<div class="content-page-container">
    <h1 class="page-title">@ViewData["Title"]</h1>
    <h4>Quản lý vai trò cho người dùng: <strong>@Model.FullName</strong></h4>
    <hr />

    <form asp-action="RoleManagement">
        <input type="hidden" asp-for="UserId" />
        <div class="form-group">
            <label class="control-label mb-2">Chọn một vai trò:</label>
            @foreach (var role in Model.Roles)
            {
                <div class="form-check">
                    <input type="radio" name="SelectedRole" value="@role.Value" class="form-check-input" id="role-@role.Value" checked="@role.Selected" />
                    <label class="form-check-label" for="role-@role.Value">@role.Text</label>
                </div>
            }
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Cập nhật Vai trò" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>