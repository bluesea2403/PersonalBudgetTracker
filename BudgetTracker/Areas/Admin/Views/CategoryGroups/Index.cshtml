@model IEnumerable<BudgetTracker.Models.CategoryGroup>

@{
    ViewData["Title"] = "Quản lý Nhóm Danh mục";
}

<div class="content-page-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title text-primary fw-bold">
                <i class="fas fa-layer-group me-2"></i>@ViewData["Title"]
            </h1>
            <p class="text-muted">📁 Quản lý các nhóm phân loại danh mục thu/chi</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Tạo Nhóm mới
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>📛 Tên Nhóm</th>
                    <th>🎨 Biểu tượng</th>
                    <th class="text-end">⚙️ Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.Name</td>
                        <td>
                            <i class="@item.Icon fa-lg text-secondary" title="@item.Icon"></i>
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="Chỉnh sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1" title="Chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Xóa">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
