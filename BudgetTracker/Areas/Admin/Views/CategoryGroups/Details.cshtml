@model BudgetTracker.Models.CategoryGroup

@{
    ViewData["Title"] = "Chi tiết Nhóm Danh mục";
}

<div class="content-page-container">
    <h1 class="page-title">
        <i class="fas fa-layer-group me-2"></i>@ViewData["Title"]
    </h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title text-primary mb-3">
                <i class="@Model.Icon me-2 fa-lg text-secondary"></i> @Model.Name
            </h4>

            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Tên Nhóm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 text-muted">Biểu tượng</dt>
                <dd class="col-sm-9">
                    <i class="@Model.Icon fa-2x text-dark" title="@Model.Icon"></i>
                    <span class="ms-2 text-muted small">@Model.Icon</span>
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary shadow-sm px-4">
            <i class="fas fa-edit me-1"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary shadow-sm px-4">
            <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
        </a>
    </div>
</div>
